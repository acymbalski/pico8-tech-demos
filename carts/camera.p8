end

function checkinput()
    if btn(0) then cam.x = cam.x - 1 end
    if btn(1) then cam.x = cam.x + 1 end
    if btn(2) then cam.y = cam.y - 1 end
    if btn(3) then cam.y = cam.y + 1 end
end

-- called by program to draw sprites
function _draw()
    cls()
    map(0, 0, 0, 0)
    camera(cam.x, cam.y)
end

